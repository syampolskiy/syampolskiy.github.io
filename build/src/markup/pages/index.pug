extends ../template

block any
	include ../blocks/menu/menu
	
block content
	.simple
		.container.simple__container
			.simple__inner
				.simple__box
					.simple__text
						p It's simple...
						h1 Jinni’s Affiliates make<br>more than the others.
						p Jinni is expanding, that’s why we are offering<br>50% Rev-Share on your traffic right from the start.*
					.simple__buttons
						a.simple-btn.simple-btn--white.simple-btn--bigger(href="#") commisions
						a.simple-btn.simple-btn--green.simple-btn--bigger(href="#") start now
				img.jinni-img(src=i + "jinni-bookkie.png", alt="")

			.balls
				img.ball.ball--3(src=i + "2.png", alt="")
				img.ball.ball--27(src=i + "3.png", alt="")
				img.ball.ball--41(src=i + "1.png", alt="")
	.what
		.container
			h2 What are we paying
			.subcptn There are 3 ways you can go:
	
			.tabs-wr
				ul.nav.nav-tabs(role='tablist' data-hr="#revHR")
					li.nav-item
						a.nav-link.js-click-tab.active(data-toggle='tab', href='#rev', role='tab' data-tab-number="1") Rev - share
					li.nav-item
						a.nav-link.js-click-tab(data-toggle='tab', href='#cpa', role='tab' data-tab-number="2") CPA
					li.nav-item
						a.nav-link.js-click-tab(data-toggle='tab', href='#hybrid', role='tab' data-tab-number="3") Hybrid
				.tabs-hr-wr
					hr.tabs-hr.num--1#revHR
			.tab-content.what-tabs
				#rev.tab-pane.fade.show.active(role='tabpanel')
					.rev
						ul.total
							li.total__item.total__item--first
								.total__box.total__box--first
									.total__cptn First 3 months<br>welcome bonus
									.total__percent 50%
							li.total__item
								.total__box
									.total__cptn NGR €0-500
									.total__percent 30%
							li.total__item
								.total__box
									.total__cptn NGR €500-1500
									.total__percent 35%
							li.total__item
								.total__box
									.total__cptn NGR €1500-3500
									.total__percent 40%
							li.total__item
								.total__box
									.total__cptn NGR over €3500
									.total__percent 45%
						.rev-text
							p Sign up to receive 50% Rev-share<br>on your traffic
						.rev-btn-wr
							a.simple-btn.simple-btn--green.simple-btn--bigger(href="#") start now
				#cpa.tab-pane.fade(role='tabpanel')
					.what-box
						h5
							| Custom CPA deals
							br.d-md-none
							| are possible.
						.what-box__text
							p We welcome every deal as long as both parties are fully satisfied.<br>Contact us today and our affiliate manager will gladly discuss your CPA deal with you.
						p
							a.simple-btn.simple-btn--green.simple-btn--bigger(href="#") let's talk
				#hybrid.tab-pane.fade(role='tabpanel')
					.what-box
						h5 Custom hybrid deals are possible.
						.what-box__text
							p We welcome every deal as long as both parties are fully satisfied.<br>Contact us today and our affiliate manager will gladly discuss your hybrid deal with you.
						p
							a.simple-btn.simple-btn--green.simple-btn--bigger(href="#") let's talk
	.container.hr-container
		hr.hr
	.your
		.container
			h3 Your conversion tools
			.subcptn.no-br-md Constantly optimizing<br>conversion on every step:
			.row.your__list
				.col-md-3.your__col
					.your__col-inner
						img.your__img(src=i + "your-1.svg", alt="")
						h6 LPs & Ads
						p We are continually creating new marketing materials for our affiliates so you can improve your conversion rates and grow your business.
				.col-md-3.your__col
					.your__col-inner
						img.your__img(src=i + "your-2.svg", alt="")
						h6 Emails
						p We make sure your  traffic is always aware of our exclusive offers with personalized and automated email cycles.
				.col-md-3.your__col
					.your__col-inner
						img.your__img(src=i + "your-3.svg", alt="")
						h6 Website
						p We constantly monitor and optimize our website to deliver<br>a User Experience designed to up-sell your traffic.
				.col-md-3.your__col
					.your__col-inner
						img.your__img(src=i + "your-4.svg", alt="")
						h6 Agents
						p Our dedicated Customer Support agents are here to help you reach even the most<br>"Hard-to-Get" clients.
	.container.hr-container.d-none.d-md-block
		hr.hr
	.chance
		.container
			h3 This is your chance to<br class="d-md-none">maximize your epic<br>50% rev-share on your traffic
			.chance__btn-wr
				a.simple-btn.simple-btn--green.simple-btn--bigger(href="#") start now
	.join
		.container
			.join__heading
				h2 Want to join our affiliate program?
				.subcptn
					| Have a question in mind?
					span.color-green.fw-500 Let’s talk
					| :
			.join-form-wr
				.join-form-wr__heading.d-md-none
					| Have a question in mind?
					br
					span.color-green Let’s talk
					| :
					hr.hr
				form(action="").join-form
					.join-form__group
						.join-form__input-wr
							.icon.icon--profile
							.mr-select-wr
								select.selectpicker.join-form-select
									option Mr.
									option Mrs.
							input.join-form__input(type="text" placeholder="First Name")
					.join-form__group
						.join-form__input-wr
							.icon.icon--profile
							input.join-form__input(type="text" placeholder="Last Name")
					.join-form__group
						.join-form__input-wr
							.icon.icon--envelope
							input.join-form__input(type="text" placeholder="Email")
					.join-form__group
						select.selectpicker.flag-select
							option(data-content="<div class='flag flag--israel'></div> +972") +972
							option(data-content="<div class='flag flag--uk'></div> +44") +44
						.join-form__input-wr.join-form__input-wr--phone
							.icon.icon--phone
							input.join-form__input(type="tel" placeholder="Phone Number")
					hr.hr.mb-20
					.join-form__group
						.join-form__input-wr
							.icon.icon--bubble
							input.join-form__input(type="text" placeholder="Subject")
					.join-form__group
						.join-form__textarea-wr
							.icon.icon--bubble
							textarea.join-form__textarea(type="text" placeholder="Message")
					.join-form__btn-row
						a.simple-btn.simple-btn--green.simple-btn--bigger(href="#") Send
	.brands
		.container
			hr.hr.d-md-none
			ul.brands-list
				li.brands-list__item
					img.brands-list__img.brands-list__img--1(src=i + "18+.png", alt="")
				li.brands-list__item
					img.brands-list__img.brands-list__img--2(src=i + "problem.svg", alt="")
				li.brands-list__item
					img.brands-list__img.brands-list__img--3(src=i + "Coat_of_arms_of_the_Isle_of_Man.png", alt="")
				li.brands-list__item
					img.brands-list__img.brands-list__img--4(src=i + "ibas.png", alt="")
				li.brands-list__item
					img.brands-list__img.brands-list__img--5(src=i + "secure.png", alt="")
	.our
		.container.our__container
			h4 Our payment methods offer a world of choice
			ul.our-list
				- var our = ["our-01.svg","our-02.svg","our-03.png","our-04.svg","our-05.png","our-06.png","our-07.png","our-08.png","our-09.png","our-10.png","our-11.png","our-12.png"];
				each item, index in our
					li.our-list__item
						.our-list__box
							img.our-list__img(class="our-list__img--" + (index+1), src=i + item, alt="")
	footer.footer
		.container
			.footer__inner
				.footer__heading
					a.footer__logo(href="/")
						img(src=i + "logo.svg", alt="")
				.footer__heading-mobile
					.footer__heading-side
						.footer__about-jinni About Jinnilotto
						p
							a.footer__link(href="#") Terms & Conditions
					a.footer__logo-mobile(href="/")
						img(src=i + "logo.svg", alt="")
				.footer__content
					.footer__terms
						a.footer__link(href="#") Terms & Conditions
					p.
						Jinni Lotto is operated by Jinni Tech Ltd of<br>First Floor, Jubilee Building, Victoria Street, Douglas,<br> Isle of Man, IM1 2SH
